<% include ./partials/header %>

    <div class="ui main text container segment">
        <div class="ui huge header"> Create New Blog</div>
        <form class="ui form" action="/blogs" method="POST">

            <div class="field">
                <label>Blog Title</label>
                <input type="text" name="blog[title]" placeholder="Blog Title">
            </div>
            <div class="field">
                <label>Image Url</label>
                <input type="text" name="blog[image]" placeholder="Paste image URL">
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]" placeholder="Description about blog"></textarea>
            </div>
            <input class="positive ui big button" type="submit">




        </form>


    </div>




    <% include ./partials/footer %>